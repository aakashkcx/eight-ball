<!DOCTYPE html>
<html lang="en">

<head>

    {{> meta}}

    <title>{{profile.username}} | Eight Ball</title>

    {{> css}}

</head>

<body>

    {{> navbar active_profile=true}}

    <div class="container">

        <div class="row justify-content-end mb-3">
            <div class="col-xl-4 col-lg-5 col-md-6">
                <form action="/profile/" method="GET">
                    <div class="input-group">
                        <input type="text" name="username" class="form-control" placeholder="Search Players">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="submit"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {{> flash}}

        <div class="jumbotron mb-0 d-flex flex-lg-row flex-column justify-content-sm-between align-items-center">
            <h1 class="display-1 text-truncate">{{profile.username}}</h1>
            <h1 class="display-3 text-muted"><span class="badge badge-secondary">{{profile.rating}}</span></h1>
        </div>

        <div class="row mt-0">

            <div class="col-md-5 col-lg-4">

                <div class="sticky-top pt-4">
                    <div class="list-group">
                        <div class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">{{profile.username}}</span>
                            <span class="badge badge-light badge-pill">#{{profile.id}}</span>
                        </div>
                        <div class="list-group-item">{{profile.firstname}} {{profile.lastname}}</div>
                        <div class="list-group-item">{{profile.email}}</div>
                        <button class="list-group-item list-group-item-action list-group-item-primary">Edit Profile</button>
                        <button class="list-group-item list-group-item-action list-group-item-danger">Delete Profile</button>
                    </div>
                </div>

            </div>

            <div class="col-md-7 col-lg-8">

                {{#each games}}
                <div class="card mt-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Game#{{this.id}}</span>
                        <span>{{this.time}}</span>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">{{this.player1Username}}</h5>
                            <h5 class="mb-0">{{this.player2Username}}</h5>
                        </div>
                        <div class="d-flex justify-content-between align-items-top">
                            <span class="text-muted">#{{this.player1Id}}</span>
                            <h2 class="">{{this.player1Score}} - {{this.player2Score}}</h2>
                            <span class="text-muted">#{{this.player2Id}}</span>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="text-center border rounded px-3 py-5 mt-4">You have not played any games yet.</div>
                {{/each}}



