<!DOCTYPE html>
<html lang="en">

<head>

    {{> meta}}

    <title>Login | Eight Ball</title>

    {{> css}}

</head>

<body>

    {{> navbar active_login=true}}

    <div class="container">

        <div class="row">
            <div class="col">
                <h1 class="display-4">Login</h1>
            </div>
            <div class="col-xl-4 col-lg-5 col-md-6">
                {{> search}}
            </div>
        </div>

        <div class="row">

            <div class="col-md-6">
                <hr>
                <form action="/login/" method="post">
                    <div class="form-group">
                        <input type="text" name="username" placeholder="Username" value="{{login.username}}" class="form-control form-control-lg" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control form-control-lg" required>
                    </div>
                    <button type="submit" class="btn btn-lg btn-block btn-primary">Login</button>
                </form>
                <hr>
                <div>
                    <p class="text-muted">Don't have an account?</p>
                    <a href="/register/" class="btn btn-secondary">Register</a>
                </div>
            </div>

            <div class="col-md-6 mt-3 mt-md-0">

                {{> flash}}

            </div>

        </div>

    </div>

    {{> js}}

</body>

</html>